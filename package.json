{
  "name": "chatbox-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "db:up": "docker compose up -d mongo",
    "db:down": "docker compose down",
    "build:packages": "pnpm -r --filter \"./packages/**\" build",
    "dev:packages": "pnpm -r --filter \"./packages/**\" build --watch",
    "dev": "pnpm db:up && concurrently -k -n PKG,API,WEB \"pnpm dev:packages\" \"pnpm dev:api\" \"pnpm dev:web:wait\"",
    "dev:web:wait": "wait-on tcp:3000 && pnpm dev:web",
    "dev:api": "pnpm -F api start:dev",
    "dev:web": "pnpm -F web dev",
    "build": "",
    "deploy": "",
    "prod": "",
    "prod:api": "",
    "prod:web": ""
  },
  "author": "Simon Belenko",
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte-eslint-parser": "^1.4.1",
    "tsup": "^8.5.0",
    "wait-on": "^7.2.0"
  }
}
